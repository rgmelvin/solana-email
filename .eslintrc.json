{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "@typescript-esling/no-unused-vars": [
      "error",
      { "argsIgnorPattern": "^_" }
    ],
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
